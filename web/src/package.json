    "build:codemirror": "esbuild codemirror-entry.js --bundle --minify --outfile=../static/dist/codemirror-bundle.js",
    "build": "npm run build:xterm && npm run build:codemirror"
  },
  "dependencies": {
    "@xterm/xterm": "^5.5.0",
